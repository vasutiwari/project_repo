<div class="wrapper width600 lightBoxWrapper">
  <div class="lightBoxSubHead"><span style="margin:2px;float:left;padding:2px;">AMP - Edit Settings </span><a href="javascript:;"><img style="margin:1px 5px;" src="/images/close_img.png" onclick='Control.Modal.close();return false;' alt="Close" title="Close" /></a></div>
    <%= form_tag :url => admin_setting_path(@setting), :remote=>true, :html=>{:id=>'setting_form', :method=>'put'} do -%>
    <!-- Container Start -->
    <div class="container01">
      <div class="box">
        <div class="boxcontent clearfix">
          <h4>Edit Setting</h4><br/>
          <label><%= @setting.name.titleize %></label> &nbsp;<br/>
          <label><%= text_area :setting, :value, :rows => 5, :cols=>55 %></label><br/>
          <div class="errorsec">
            <p class="fltright"><a onclick="jQuery('#setting_form').submit();" ><img src="/images/btn_submit.gif"/></a></p>
          </div>
        </div>
      </div>
    </div>
    <!-- Container End -->
  <% end %>
</div>