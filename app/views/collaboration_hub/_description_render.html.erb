  <span><input id="edit_profile_description"type="text" value="<%= user_collection.comment %>" name="name"/><a href="javascript:;" onclick="ajax_call_user_profile_update(jQuery('div#change_comment span input[name]').val(),'comment');return false;" class="bluecolor"  id="ok_save_comment">Save</a></span>&nbsp;<a href="javascript:;" onclick="jQuery('div#change_comment').hide();jQuery('div#disp_comment').show();
jQuery('div#change_comment span input[name]').val(jQuery('div#comment_description').text().strip()) ;return false;" class="bluecolor" id="cancel_save_comment">Cancel</a>
</div>
