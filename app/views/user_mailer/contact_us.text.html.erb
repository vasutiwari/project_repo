<table width="100%" border="0" cellspacing="0" cellpadding="0"  bgcolor="#dddddd">
  <tr>
    <td height="100%" scope="col">
      <table width="604" border="0" cellspacing="0" cellpadding="0" align="center">
        <tr>
          <td scope="col">
            <table width="604" border="0" cellspacing="0" cellpadding="0">
              <tr><td scope="col"  align="left"><a href='<%= "#{APP_CONFIG[:main_url]}" %>'><img style="border: 0" src='<%= "#{APP_CONFIG[:site_url]}/images/amp_logo_email.png" %>' width="172" height="83" /></a></td></tr>
            </table>
          </td>
        </tr>
        <tr><td background='<%= "#{APP_CONFIG[:site_url]}/images/email_template_top.png" %>' width="604" height="7" align="center"></td></tr>
        <tr>
          <td background='<%= "#{APP_CONFIG[:site_url]}/images/email_template_mid.png" %>'>
            <table width="600" border="0" cellspacing="0" cellpadding="0" bgcolor="#FFFFFF" align="left">
              <tr>
                <td>
                  <table width="560" border="0" cellpadding="0" cellspacing="0" align="center">
										<tr><td height="10">&nbsp; </td></tr>
												<tr><td align="left"><font face="Arial, Helvetica, sans-serif"><font color="#454545"><font size="2px">Hi <%=@email%>,</font></td></tr>
										<tr><td height="10">&nbsp; </td></tr>
												 <tr><td align="left"><font face="Arial, Helvetica, sans-serif"><font color="#838383"><font size="2">Thank you for contacting AMP Technologies!.We will get back to you within 2 working days. </font></font></font></td></tr>
					<tr><td height="10">&nbsp; </td></tr>
                    <tr><td align="left"><font face="Arial, Helvetica, sans-serif"><font color="#838383"><font size="2"> Here are the details you provided:
  </font></font></font></td></tr>
	               <%unless @name.blank?%>
                    <tr><td height="10">&nbsp; </td></tr>
                    <tr><td align="left"><font face="Arial, Helvetica, sans-serif"><font color="#838383"><font size="2">Name: <font color="#454545"><%=@name%> </font></font></font></font></td></tr>
									<%end%>	
                    <tr><td height="10">&nbsp; </td></tr>
                    <tr><td align="left"><font face="Arial, Helvetica, sans-serif"><font color="#838383"><font size="2">Email: <font color="#454545"><%=@email%> </font></font></font></font></td></tr>
			               <%unless @phone_number.blank?%>
                    <tr><td height="10">&nbsp; </td></tr>
                    <tr><td align="left"><font face="Arial, Helvetica, sans-serif"><font color="#838383"><font size="2">Phone Number: <font color="#454545"><%=@phone_number%></font> </font></font></font></td></tr>
										<%end%>
		               <%unless @company_name.blank?%>
                    <tr><td height="10">&nbsp; </td></tr>
                    <tr><td align="left"><font face="Arial, Helvetica, sans-serif"><font color="#838383"><font size="2">Company Name: <font color="#454545"><%=@company_name%></font> </font></font></font></td></tr>
										<%end%>
			               <%unless @comment.blank?%>
                    <tr><td height="10">&nbsp; </td></tr>
                    <tr><td align="left"><font face="Arial, Helvetica, sans-serif"><font color="#838383"><font size="2">Comments: <font color="#454545"> <%=@comment%></font> </font></font></font></td></tr>
										<%end%>
                    <tr><td height="50">&nbsp;</td></tr>
                    <tr><td align="left"><font face="Arial, Helvetica, sans-serif"><font color="#454545"><font size="2">- AMP Team</font></font></font></td></tr>
                    <tr><td height="10">&nbsp;</td></tr>
                     <tr><td align="left"><font face="Arial, Helvetica, sans-serif"><font color="#454545"><font size="2"><a href='<%= "#{APP_CONFIG[:main_url]}" %>'><%= "#{APP_CONFIG[:main_url]}" %></a></font></font></font></td></tr>
                    <tr><td height="20">&nbsp;</td></tr>
                  </table>
                </td>
              </tr>
            </table>
          </td>
        </tr>
        <tr><td><img src='<%= "#{APP_CONFIG[:site_url]}/images/email_template_bot.png" %>' /></td></tr>
        <tr><td height="25">&nbsp; </td></tr>
      </table>
    </td>
  </tr>
</table>